[alias]
    st = status
    ci = commit
    co = checkout
    di = diff
    dag =  log --oneline --graph

[user]
	name = Herr_Alucard
	email = adrain.f.tepes@gmail.com

[core]
    editor = vim

[color]
    status = auto
    branch = auto
    diff = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
